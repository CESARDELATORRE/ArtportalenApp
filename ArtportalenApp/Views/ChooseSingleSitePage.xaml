<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:vms="clr-namespace:ArtportalenApp.ViewModels;assembly=ArtportalenApp"
             d:DataContext="{d:DesignInstance vms:ChooseSingleSiteViewModel}"
             
             x:Class="ArtportalenApp.Views.ChooseSingleSitePage"
             x:Name="CurrentPage">

  <StackLayout>
    
    <SearchBar Placeholder="Sök" Text="{Binding SearchText}" VerticalOptions="Center" />

    <ListView ItemsSource="{Binding Sites}" x:Name="SitesListView">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell x:Name="textCell"
                    Text="{Binding TitleText}"
                    Detail="{Binding DetailText}"
                    StyleId="disclosure"
                    Command="{Binding BindingContext.DoneCommand, Source={x:Reference CurrentPage}}"
                    CommandParameter="{Binding .}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </StackLayout>

</ContentPage>