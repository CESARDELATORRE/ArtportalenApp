<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtportalenApp.Views.ChooseSingleSitePage"
             x:Name="currentPage">

  <StackLayout>
    
    <SearchBar x:Name="searchBar" Placeholder="Sök" Text="{Binding SearchText}" VerticalOptions="Center" />

    <ListView ItemsSource="{Binding Sites}"
              x:Name="SitesListView">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell x:Name="textCell"
                    Text="{Binding TitleText}"
                    Detail="{Binding DetailText}"
                    StyleId="disclosure"
                    Command="{Binding BindingContext.DoneCommand, Source={x:Reference currentPage}}"
                    CommandParameter="{Binding .}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </StackLayout>

</ContentPage>