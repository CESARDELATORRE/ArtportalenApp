<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtportalenApp.Views.SitesPage"
             x:Name="sitesPage">

  <ListView ItemsSource="{Binding Sites}"
            HasUnevenRows="True"
            IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsBusy, Mode=OneWay}"
            x:Name="SitesListView">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell x:Name="textCell"
                  Text="{Binding TitleText}"
                  Detail="{Binding DetailText}"
                  StyleId="disclosure"
                  Command="{Binding BindingContext.PreviewCommand, Source={x:Reference sitesPage}}"
                  CommandParameter="{Binding .}">
        </TextCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>


</ContentPage>