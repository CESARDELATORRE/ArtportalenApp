<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtportalenApp.App">

  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="colorPrimary">#4cae4c</Color>

      <Style x:Key="button" TargetType="Button">
        <Setter Property="BorderWidth" Value="1"></Setter>
        <Setter Property="BorderColor" Value="#cccccc"></Setter>
        <Setter Property="TextColor" Value="#000000"></Setter>
      </Style>

      <Style x:Key="buttonPrimary" TargetType="Button" BasedOn="{StaticResource button}">
        <Setter Property="BorderColor" Value="#4cae4c"></Setter>
        <Setter Property="BackgroundColor" Value="{StaticResource colorPrimary}"></Setter>
        <Setter Property="TextColor" Value="#ffffff"></Setter>
      </Style>
      
      <Style TargetType="Entry">
        <Setter Property="FontSize" Value="Medium"></Setter>
        <Setter Property="PlaceholderColor" Value="#aaaaaa"></Setter>
      </Style>
      
      <Style TargetType="SearchBar">
        <Setter Property="PlaceholderColor" Value="#cccccc"></Setter>
        <Setter Property="TextColor" Value="Default"></Setter>
      </Style>

    </ResourceDictionary>
  </Application.Resources>

</Application>